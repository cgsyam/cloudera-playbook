# Note for AWS: 'Public DNS' name is too long for ansible_host, use 'Public IP' (https://github.com/ansible/ansible/issues/11536)
[localhost]
localhost  ansible_connection=local ansible_become=false

[scm_server]
node-1.hadoop.com        license_file=/path/to/cloudera_license.txt

[db_server]
node-1.hadoop.com

[krb5_server]
node-2.hadoop.com        default_realm=CLOUDERA.COM

[utility_servers:children]
scm_server
db_server
krb5_server

[gateway_servers]
node-3.hadoop.com        host_template=HostTemplate-Gateway role_ref_names=HDFS-HTTPFS-1

[master_servers]
node-1.hadoop.com        host_template=HostTemplate-Master1
node-2.hadoop.com        host_template=HostTemplate-Master2
node-3.hadoop.com        host_template=HostTemplate-Master3

[worker_servers]
node-2.hadoop.com
node-3.hadoop.com
node-4.hadoop.com

[worker_servers:vars]
host_template=HostTemplate-Workers

[cdh_servers:children]
utility_servers
gateway_servers
master_servers
worker_servers

[all:vars]
ansible_user=vagrant
